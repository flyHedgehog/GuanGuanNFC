<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/listcolor"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:background="@color/colorlight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        >

        <TextView
            android:id="@+id/text_isselected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:text="活动类型"
            android:textColor="@color/colorgray"></TextView>

        <TextView
            android:id="@+id/text_acta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/text_isselected"
            android:layout_alignLeft="@+id/text_isselected"
            android:layout_marginTop="10dp"
            android:text="吃饭"
            android:textColor="@color/colorbBlack"
            android:textSize="20sp"></TextView>

<!--        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_act1"
            android:layout_alignLeft="@+id/text_act1"
            android:layout_marginTop="10dp"
            android:text="食堂"
            android:textColor="@color/colorgray"></TextView>-->

        <TextView
            android:id="@+id/text_endttime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:text="13:40:10"
            android:textColor="@color/colorgray"></TextView>

        <TextView
            android:id="@+id/min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_toStartOf="@id/text_endttime1"
            android:layout_alignTop="@id/text_endttime1"

            ></TextView>

        <TextView
            android:id="@+id/text_starttime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:12:12"
            android:layout_toStartOf="@id/min"
            android:layout_alignTop="@id/text_endttime1"
            ></TextView>


        <TextView
            android:id="@+id/text_long1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_acta"
            android:layout_alignEnd="@+id/text_endttime1"

            android:layout_marginTop="2dp"
            android:layout_marginEnd="27dp"
            android:text="0h15m15s"
            android:textColor="@color/colorRed"
            android:textSize="20sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_acta"
            android:layout_alignEnd="@+id/text_long1"

            android:layout_marginTop="2dp"
            android:layout_marginEnd="-46dp"
            android:text="能量"
            android:textColor="@color/colorRed"
            android:textSize="20sp"></TextView>

        <!--        <TextView
                    android:id="@+id/text_date"
